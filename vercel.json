
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/server.js" },
    { "src": "/(.*)\\.(js|css|png|jpg|jpeg|svg|ico|txt|woff2?)", "dest": "/dist/$1.$2" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}
